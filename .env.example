# Database Configuration
DATABASE_NAME=your_database_name
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password
DATABASE_HOST=localhost  # Change this if using a remote database
DATABASE_PORT=5432

# Django Configuration
SECRET_KEY=your_secret_key  # Generate a unique secret key for production
DEBUG=True  # Set to False in production

# Additional Configurations
ALLOWED_HOSTS=127.0.0.1, .yourdomain.com  # Add the domain name or IP addresses for your app

# Email Configuration (optional, if using email functionality)
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password

